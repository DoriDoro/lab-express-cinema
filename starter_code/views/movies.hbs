{{!-- list of all movies --}}

<div class="container_movies">
    <h1>Ironhack Cinema</h1>
    <p>Click on the link to get more information about the movie.</p>
    
    <div class="movies_container">
        {{#each movies}}
        <div class="div_total">
            <img src="{{ this.image }}" alt="img" id="img">

            <div class="div_content">
                <p> {{ this.title }} </p>
                <a href="/movies/{{this._id}}">See more</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
